/* pages/videoDetail/index.wxss */
/* pages/stories/index.wxss */
.detailContainer,.detail_movice{
  background-color: rgb(0, 0, 0);
}

/* 视频播放 */
.detail_movice image{
  position: relative;
  width: 100%;
}
.detail_movice  video{
  position: relative;
  width: 100%;
}

.detail_movice .label{
  position: absolute;
  bottom: 5px;
  right: 7px;
  font-size: 11px;
  color: #fff;
}

.on{
  position: fixed;
  width:100%;
  height:421.2rpx;
  top:0rpx;
  z-index: 1;
}


/* 介绍信息 */
.introduce{
  background-color:#1f1e1e;
  color: #fff;
  height: 220rpx;
  box-sizing: border-box;
}
.introduce-top-title{
  margin-left: 30rpx;
}
.introduce-top-text{
  float: right;
  font-size: 12px;
  margin-right: 50rpx;
  color: #fff;
  line-height: 25px;
}
.introduce .top{
  position: relative;
  padding-top: 15rpx;
}
.introduce .top::after{
  position: absolute;
  right: 30rpx;
  top: 35rpx;
  content: '';
  color: #fff;
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.introduce-center-text{
  font-size: 9px;
  margin-left: 30rpx;
  line-height: 25px;
  color: #C0C0C0;
}
.bottom{
  padding-top: 10rpx;
  position: relative;
}
.bottom image{
  width: 56rpx;
  height: 56rpx;
}
.bottom .ping{
  margin-left: 30rpx;
}
.bottom .share{
  float: right;
  margin-right: 60rpx;
}
.bottom button.share {
  opacity: 0;
  position: absolute;
  display: inline-block;
  z-index: 3;
  width: 56rpx;
  height: 56rpx;
  right: 80rpx;
}
.bottom .like{
  float: right;
  margin-right: 30rpx;
}

/* 剧集 */
.episode{
  background-color:#1f1e1e;
  color: #fff;
  height: 220rpx;
  border-top: 1px solid #696969;
  box-sizing: border-box;
}
.episode-top-title{
  margin-left: 30rpx;
}
.episode-top-text{
  float: right;
  font-size: 10px;
  margin-right: 50rpx;
  color: #C0C0C0;
  line-height: 25px;
}
.episode .top{
  position: relative;
  padding-top: 30rpx;
}
.episode .top::after{
  position: absolute;
  right: 30rpx;
  top: 50rpx;
  content: '';
  color: #fff;
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
.episode .center{
  margin-left: 30rpx;
  margin-top: 20rpx;
  width: 100%;
  white-space: nowrap;
  overflow-x: scroll;
  box-sizing: border-box;
}
.episode .center .gather{
  width: 80rpx;
  border-radius: 10rpx;
  background-color: rgba(88, 84, 84, .2);
  height: 80rpx;
  margin: 10rpx;
  text-align: center;
  color: #ece3e3;
  display: inline-block;
  box-sizing: border-box;
}
.episode-num{
  color: #f84904;
}

/* 片花 */
.clips{
  background-color: #1f1e1e;
  border-top: 1px solid #696969;
}
.clips-title{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  padding: 25rpx;
}
.clips-title .clips-title-text{
  margin-left: 10rpx;
  font-size: 14px;
  margin-right: 50rpx;
  color: #fff;
  line-height: 25px;
}
.videoContainer {
  position: absolute;
  left: 0;
  width: 100%;
}
.videoContainer .pinList {
  background: #fff;
}

.figure_box {
  padding-top: 10px;
  /*background-color: #F5F7F9;*/
  position: relative;
  background-color: #1a1f2d;
}
.figure_box:first-child {
  padding-top: 0;
}

/*player pic*/
.mod_poster {
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
  height: 214.5px;
}
.mod_poster::before {
  content: "";
  display: block;
  width: 100%;
  padding-bottom: 56.25%;
}
.mod_poster .poster {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 214.5px;
}
.mod_poster .time {
  position: absolute;
  bottom: 5px;
  right: 7px;
  font-size: 11px;
  color: #fff;
}
.mod_poster .toptitle {
  position: absolute;
  top: 0;
  font-size: 17px;
  font-weight: bold;
  line-height: 22px;
  color: #fff;
  margin-right: 14px;
  background: -webkit-linear-gradient(
    bottom,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.75) 100%
  );
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.75) 100%
  );
  padding: 13px 16px;
  padding-bottom: 21px;
  width: 100%;
}
.play_icon {
  position: absolute;
  z-index: 4;
  left: 50%;
  top: 50%;
  width: 118rpx;
  height: 118rpx;
  margin-top: -59rpx;
  margin-left: -59rpx;
}

/*txt*/
.two_row {
  white-space: normal;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.none {
  display: none;
}
.show {
  display: block;
}
.mod_feeds_list {
  position: relative;
}



/*对话框 */
.commodity_attr_box {
  width: 100%;
  height: 100%;
  color: #fff;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  top: 420rpx;
  left: 0;
  z-index: 998;
  background-color: #1f1e1e;
  padding-top: 20rpx;
}
.commodity_movableView{
  width: 100%;
  height: 2024rpx;
}
.commodity_hide{
  position: relative;
  height: 50rpx;
}
.commodity_hide .title{
  margin-left: 30rpx;
  font-size: 35rpx;
  line-height: 35rpx;
  font-weight: 40;
}
.commodity_hide .commodity_hide__on{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  display: inline-block;
  right: 20rpx;
}

.commodity_hide .commodity_hide__on::after{
  position: absolute;
  top: 10rpx;
  content: '';
  color: #fff;
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #ece3e3;
  border-right: 4rpx solid #ece3e3;
  -webkit-transform: rotate(135deg);
  transform: rotate(135deg);
}
.commodity_attr_box .hightDataView{
  width: 100%;
}
.commodity_attr_box .hightDataView .top{
  background-color:#1f1e1e;
  color: #fff;
  height: 140rpx;
  box-sizing: border-box;
  border-bottom: 4rpx solid #8b8989;
}
.commodity_attr_box .hightDataView .top .top-text{
  font-size: 12px;
  margin-top: 35rpx;
  margin-left: 30rpx;
  margin-right: 50rpx;
  color: #C0C0C0;
  line-height: 25px;
}
.commodity_attr_box .hightDataView .top .top-descrese{
  margin-left: 30rpx;
  font-size: 12px;
  line-height: 25px;
  color: #C0C0C0;
}
.commodity_attr_box .hightDataView .center{
  border-bottom: 4rpx solid #8b8989;
}

.commodity_attr_box .hightDataView .center .star-list {
  width: 100%;
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-bottom: 50rpx;
  white-space: nowrap;
  box-sizing: border-box;
}

.commodity_attr_box .hightDataView .center .star-list .item{
  text-align: center;
  display: inline-block;
  padding:4rpx;
}

.commodity_attr_box .hightDataView .center .star-list .item image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 10rpx;
}
.commodity_attr_box .hightDataView .center .star-list .item .name{
  font-size: 10px;
  font-weight: normal;
}

.commodity_attr_box .hightDataView .bottom{
  width: 100%;
}

.commodity_attr_box .hightDataView .bottom .title{
  margin-left: 30rpx;
  font-size: 35rpx;
  line-height: 35rpx;
  font-weight: 40;
  margin-top: 30rpx;
}

.commodity_attr_box .hightDataView .bottom .text{
  font-size: 12px;
  font-weight: normal;
  text-indent: 34rpx;
  margin-top: 20rpx;
  color: #C0C0C0;
  margin-left: 30rpx;
}

