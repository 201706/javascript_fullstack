/* miniprogram/pages/main/main.wxss */
page {
  margin: 0;
}
.tx-app-shouye {
  display: flex;
  background: #E8E8E8;
  flex-direction: column;
  margin-top: 31rpx;
  width: 100%;
  height: 100%;
}
.shouye-menu {
  width: 100%;
  height: 100rpx;
  line-height: 90rpx;
  background: #fff;
  position: relative;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y:hidden;
  box-sizing: border-box;
}
.shouye-menu text {
  font-size: 28rpx;
  margin: 0 20rpx 0 44rpx;
  font-weight: bold;
  display: inline-block;
}
.shouye-menu text.active {
  color: #ff7700;
  border-bottom: 1rpx solid #ff7700;
}
.shouye-search{
  position: relative;
  width: 100%;
  background: #fff;
  height: 90rpx;
  border-top: 2rpx solid rgb(197, 195, 195);
  box-sizing: border-box;
  padding-left: 25rpx;
  padding-top: 25rpx;
  display: flex;
}
.search-input{
  width: 100%;
  height: 90rpx;
  flex: 1;
  font-weight: bold;
  line-height: 60rpx;
  font-size: 18px;
}

.shouye-swiper{
  height: 500rpx;
  background: #fff;
  padding: 10rpx 20rpx 10rpx 20rpx;
  box-sizing: border-box;
}
.shouye-swiper .slide-image{
  width: 100%;
  height: 80%;
}
.shouye-swiper .slide-title{
  padding: 13px 0;
  font-size: 12px;
  line-height: 20px;
  color: #000028;
  width: 90%;
  height: 28px;
}
.shouye-chasing{
  background: #fff;
}
.chasing-title{
  padding-bottom: 36rpx;
  font-size: 14px;
  margin: 10rpx 20rpx 0 20rpx;
}
.list {
  width: calc(100% - 80rpx);
  margin: 0 40rpx;
  position: relative;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y:hidden;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
}


.list .detail {
  flex:1;
  width: 100%;
  height: 100%;
  
}
.list .detail .view-image {
  width: 100%;
  position: relative;
}
.list .detail .view-image text {
  position: absolute;
  font-size: 24rpx;
  right: 10rpx;
  bottom: 10rpx;
  color: #fff;
}

.list .detail image{
  width: 100%;
  height: 100%;
  display: block;
}
.list .detail .font-area {
  padding: 10rpx 0;
}
.list .detail .font-area text{
  font-size: 24rpx;
  line-height: 36rpx;
  display: flex;
}
.list .vertical-space {
  width: 18rpx;
  height: 100%
}
