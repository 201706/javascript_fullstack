/* miniprogram/pages/shortVideos/shortVideos.wxss */

/* miniprogram/pages/main/main.wxss */
page {
  margin: 0;
}

/* 菜单 */
.short-menu {
  width: 100%;
  height: 100rpx;
  line-height: 90rpx;
  position: relative;
  background: #fff;
  white-space: nowrap;
  box-sizing: border-box;
  z-index: 20;
}
.menu-fixed{
  position:fixed;
  width:100%;
  height:100rpx;
  top:0rpx;
  background:white;
  z-index: 20;
}
.short-menu text {
  font-size: 28rpx;
  margin: 0 20rpx 0 44rpx;
  font-weight: bold;
  display: inline-block;
}
.short-menu text.active {
  color: #ff7700;
  border-bottom: 1rpx solid #ff7700;
}

.swiper,.scroll{
  height: 100%;
}

.videoContainer {
  left: 0;
  width: 100%;
}

.figure_box {
  padding-top: 10px;
  /*background-color: #F5F7F9;*/
  position: relative;
  background-color: #1a1f2d;
}
.figure_box:first-child {
  padding-top: 0;
}

/*player pic*/
.mod_poster {
  position: relative;
  left: 0;
  top: 0;
  width: 100%;
}
.mod_poster::before {
  content: "";
  display: block;
  width: 100%;
  padding-bottom: 56.25%;
}
.mod_poster .poster {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  min-height: 0.562667vw;
}
.mod_poster .time {
  position: absolute;
  bottom: 5px;
  right: 7px;
  font-size: 11px;
  color: #fff;
}
.mod_poster .toptitle {
  position: absolute;
  top: 0;
  font-size: 17px;
  font-weight: bold;
  line-height: 22px;
  color: #fff;
  margin-right: 14px;
  background: -webkit-linear-gradient(
    bottom,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.75) 100%
  );
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0) 0%,
    rgba(0, 0, 0, 0.75) 100%
  );
  padding: 13px 16px;
  padding-bottom: 21px;
  width: 100%;
}
.play_icon {
  position: absolute;
  z-index: 4;
  left: 50%;
  top: 50%;
  width: 118rpx;
  height: 118rpx;
  margin-top: -59rpx;
  margin-left: -59rpx;
}

/*txt*/
.two_row {
  white-space: normal;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.none {
  display: none;
}
.show {
  display: block;
}
.mod_feeds_list {
  position: relative;
}
